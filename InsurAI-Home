        Get Started
      </Button>
    </section>
  );
}

// Feature Card
function FeatureCard({ title, desc }) {
  return (
    <Card className="shadow-lg rounded-2xl border-none">
      <CardContent className="p-6">
        <h3 className="text-xl font-semibold text-blue-700">{title}</h3>
        <p className="text-gray-600 mt-2">{desc}</p>
      </CardContent>
    </Card>
  );
}

// Features Section
function FeaturesSection() {
  const features = [
    { title: "Insurance Plans", desc: "Explore and compare corporate insurance policies." },
    { title: "Apply Insurance", desc: "Easily apply for the best suited policies online." },
    { title: "Claim Insurance", desc: "Quick and hassle-free claim process with automation." },
    { title: "Profile", desc: "Manage your details, policies, and claim history securely." },
    { title: "About Project", desc: "Learn more about InsurAI and its benefits for organizations." },
  ];

  return (
    <section id="features" className="grid grid-cols-1 md:grid-cols-3 gap-6 px-10 py-12">
      {features.map((feature, index) => (
        <motion.div 
          key={index}
          initial={{ opacity: 0, y: 30 }}
          animate={{ opacity: 1, y: 0 }}
          transition={{ delay: index * 0.2 }}
        >
          <FeatureCard title={feature.title} desc={feature.desc} />
        </motion.div>
      ))}
    </section>
  );
}

// Footer
function Footer() {
  return (
    <footer className="bg-blue-700 text-white text-center py-6 mt-auto">
